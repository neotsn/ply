            img.navbar-logo(src="/images/chrome/logos/logo-v1-white-100x100.png")
            
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li
              a(href='/features') Features
            li
              a(href='/pricing') Pricing
          if !user
            a.navbar-right.navbar-login.btn.btn-success(href="/auth/github")
              img(src="/images/chrome/logos/GitHub-Mark-32px.png")
              | Sign in
          else
            a.navbar-login.navbar-right.btn.btn-danger(href="/logout")
              img(src=""+user.avatarUrl)
              | Logout #{user.displayName}
            ul.nav.navbar-nav.navbar-right
              li
                a(href="/admin/") Dashboard
            
